 
<project>

    <property name="jarfile" value="ASL17_Middleware.jar"/>
    <property name="build.dir" value="bin/classes"/>
    <property name="src.dir" value="src"/>
	<property name="lib.dir" value="lib"/>
    <!-- Add log4j2 jars -->
    <path id="classpath">
        <fileset dir="${lib.dir}">
            <include name="log4j-core-2.9.1.jar"/>
            <include name="log4j-api-2.9.1.jar"/>
        </fileset>
    </path>
    <target name="clean">
        <delete dir="bin"/>
    </target>

    <target name="compile">
        <mkdir dir="${build.dir}"/>
        <copy todir="${build.dir}" overwrite="true">
            <fileset dir="${src.dir}" excludes="**/*.java"/>
        </copy>
        <javac includeantruntime="false" srcdir="${src.dir}" destdir="${build.dir}">
            <classpath refid="classpath"/>
        </javac>
    </target>

    <target name="jar" depends="compile">
        <mkdir dir="bin/jar"/>

        <manifestclasspath property="manifest.classpath" jarfile="${jarfile}">
            <classpath refid="classpath"/>
        </manifestclasspath>

        <jar destfile="bin/jar/${jarfile}" basedir="${build.dir}">
            <manifest>
                <attribute name="Main-Class" value="ch.ethz.asl.RunMW"/>
                <attribute name="Class-Path" value="${manifest.classpath}"/>
            </manifest>
        	<zipgroupfileset dir="${lib.dir}" includes="**/*.jar" />
        </jar>
    </target>

    <target name="run" depends="jar">
        <java jar="bin/jar/${jarfile}" fork="true"/>
    </target>

</project>
